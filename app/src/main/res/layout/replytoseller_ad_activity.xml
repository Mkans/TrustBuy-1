<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="16dp">

    <EditText
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:ems="10"
        android:text="RE:CAD book for sale!"
        android:inputType="textEmailSubject"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/SendMessage"
        android:layout_alignStart="@+id/SendMessage" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:inputType="textMultiLine"
        android:text="Hi,
I am interested in buying the book in the ad and would pay the said price . Can we set a time for meeting?

Regards,
SS
"
        android:gravity="top|left"
        android:layout_above="@+id/SendMessage"
        android:layout_marginBottom="23dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/SendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="SEND"
        android:onClick="SendMessage"/>

    <Button
        android:id="@+id/button28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/SendMessage"
        android:layout_toRightOf="@+id/SendMessage"
        android:text="@string/cancel"
        android:onClick="Cancel"/>

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:text="Subject" />

</RelativeLayout>